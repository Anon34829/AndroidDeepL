<resources>

    <style name="AppTheme" parent="Theme.AppCompat.Light.NoActionBar">
        <item name="colorPrimary">@color/colorPrimary</item>
        <item name="colorPrimaryDark">@color/colorPrimaryDark</item>
        <item name="colorAccent">@color/colorAccent</item>
    </style>

    <style name="SplashScreenTheme" parent="AppTheme">
        <item name="android:windowBackground">@drawable/splash_screen</item>
    </style>

    <style name="TranslationCardViewStyle" parent="CardView">
        <item name="android:layout_margin">6dp</item>
        <item name="cardCornerRadius">6dp</item>
        <item name="cardElevation">2dp</item>
    </style>

    <style name="TranslationTextStyle">
        <item name="android:background">@android:color/transparent</item>
        <item name="android:gravity">top</item>
        <item name="android:minLines">@integer/min_lines</item>
        <item name="android:textSize">18sp</item>
        <item name="android:paddingLeft">8dp</item>
        <item name="android:paddingStart">8dp</item>
        <item name="android:paddingRight">8dp</item>
        <item name="android:paddingEnd">8dp</item>
        <item name="android:paddingBottom">8dp</item>
        <item name="android:paddingTop">3dp</item>
    </style>

    <!--We set elevation to 0dp for pre API 21 devices to avoid strange shadows-->
    <style name="FabMiniMini" parent="Widget.Design.FloatingActionButton">
        <item name="android:layout_width">30dp</item>
        <item name="android:layout_height">30dp</item>
        <item name="android:scaleType">center</item>
        <item name="elevation">0dp</item>
        <item name="pressedTranslationZ">0dp</item>
    </style>

</resources>
